<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.mapper.UserMapper">
    <select id="getAll" resultType="com.springboot.domain.User">
        select * from user
    </select>
    <select id="getUserById" parameterType="int" resultType="com.springboot.domain.User">
         select * from user
         <where>
             <if test="id !=null">
                 id =#{id}
             </if>
         </where>
    </select>
</mapper>